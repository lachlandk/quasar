{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES6",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationDir": "build/types",
        "outDir": "build/quasar",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/symbolic",
        "src/functions",
        "src/core/errors.ts",
    ]
}